.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_brands_path
  .actions-bar.wat-cf
    = will_paginate @brands
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Brands
    .search
      .inner
      %table.table.users
        %tr
          %th.first.norwap
            = t("activerecord.labels.id", :default => "ID")
          %th.picture picure
          %th.name brand name
          %th.create= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @brands.each.with_index do |brand, index|
          %tr{:class => cycle("odd", "even")}
            %td.norwap
              = brand.id
            %td
              = image_tag brand.picture
            %td
              = brand.name
            %td
              = brand.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_brand_path(brand)
              |
              = link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_brand_path(brand)
              |
              = link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_brand_path(brand), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'admin/sidebar')
